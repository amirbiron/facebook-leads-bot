# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
DATABASE_NAME=facebook_leads

# Facebook Account
FB_EMAIL=your_facebook_email@example.com
FB_PASSWORD=your_facebook_password

# Groups to Monitor (comma separated URLs)
FB_GROUPS=https://www.facebook.com/groups/example1,https://www.facebook.com/groups/example2

# Scraper Settings
CHECK_INTERVAL_MINUTES=180
POSTS_PER_GROUP=10
GROUPS_PER_CYCLE=5
QUIET_HOURS_START=2
QUIET_HOURS_END=7
HEADLESS_MODE=false

# Keywords (comma separated)
POSITIVE_KEYWORDS=מחפש מפתח,דרוש מפתח,צריך בוט,מישהו יודע לעשות,עזרה בפיתוח,טלגרם בוט,וואטסאפ בוט,אוטומציה,פייתון,python,automation
NEGATIVE_KEYWORDS=בחינם,התנדבות,סטודנט,לימודים,עזרה חינם,wordpress,עיצוב גרפי

# Optional
TIMEZONE=Asia/Jerusalem
LOG_LEVEL=INFO
